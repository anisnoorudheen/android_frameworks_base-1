<?xml version="1.0" encoding="utf-8"?>
<com.android.keyguard.clock.ClockLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal|top">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center|top"
    android:gravity="center"
    android:alpha="0.85"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/clock_view"
        android:layout_weight="1"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal">

        <TextClock
            android:id="@+id/clockHr"
            android:layout_width="112dp"
            android:layout_height="112dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/oronos_solidbg"
            android:format12Hour="hh"
            android:format24Hour="kk"
            android:letterSpacing="0.1"
            android:layout_marginRight="6dp"
            android:textSize="58sp" />

        <TextClock
            android:id="@+id/clockMin"
            android:layout_width="94dp"
            android:layout_height="94dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/oronos_roundbg"
            android:format12Hour="mm"
            android:format24Hour="mm"
            android:layout_weight="1"
            android:letterSpacing="0.1"
            android:textSize="46sp" />
    </LinearLayout>

    <TextClock
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:letterSpacing="0.02"
        android:background="@drawable/oronos_roundbg"
        android:textSize="19sp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="22dp"
        android:paddingRight="22dp"
        android:textAllCaps="false"
        android:format12Hour="EEEE, d. MMMM"
        android:format24Hour="EEEE, d. MMMM"
        />

</LinearLayout>

</com.android.keyguard.clock.ClockLayout>
